@model IEnumerable<WebApp.Models.SearchUserModel>
    <script>
        $(document).ready(function () {

        });

        function getAudio(empnum) {
            $("." + empnum).load("/AudioDownload/Index?empnum=" + empnum);
        }
    </script>    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LanId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Play Recording
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <div id="divDownloadAudio" class="@item.EmpNum">
                           <input type="button" onclick="getAudio(@item.EmpNum)" value="Get Recording" class="btn btn-primary" />
                        </div>
                    </td>                   
                </tr>
            }
        </tbody>
    </table>
