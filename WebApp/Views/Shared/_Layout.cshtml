@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CCSIND Name Pronounce - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color: aliceblue;height:95px;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h1>CCSIND Name Pronounce</h1></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        @if (Context.Session.GetString("EmpType") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Edit" asp-route-id="@Context.Session.GetString("EmpID")">Profile</a>
                            </li>
                        }
                        @if (Context.Session.GetString("EmpType") == "FullTime" || Context.Session.GetString("EmpType") == "Contractor")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Search Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Edit" asp-route-id="@Context.Session.GetString("EmpID")">Profile</a>

                            </li>

                        }
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <table style="width:100%;text-align:left">
                        <tr>                            
                            <td>
                                @if (Context.Session.GetString("UserName") == null)
                                {
                                    <table>
                                        <tr>
                                            <td><a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a></td>
                                            <td><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Create">Register</a></td>
                                        </tr>
                                    </table>
                                }
                                else
                                {
                                    <table>
                                        <tr>
                                            <td>
                                                Welcome @Context.Session.GetString("UserName")
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">(Logout)</a>
                                            </td>
                                        </tr>
                                    </table>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: lightgray;">
        <div class="container">
            &copy; 2022 - CCSIND Team
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
